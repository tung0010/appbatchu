<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#8888ff"
    android:layout_height="match_parent">
    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:id="@+id/wingame"
        android:layout_height="wrap_content"
        android:src="@drawable/wingame"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/wingame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOU WIN!!!"
        android:id="@+id/youwin"
        android:textSize="@dimen/_50sdp"
        android:singleLine="true"
        style="@style/grouptext"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:src="@drawable/img_folder"
        app:layout_constraintTop_toBottomOf="@id/youwin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ok"
        />

</androidx.constraintlayout.widget.ConstraintLayout>