<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearSix"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/frameModal"
        android:layout_width="@dimen/_246sdp"
        android:layout_height="@dimen/_311sdp"
        android:layout_gravity="center">

        <FrameLayout
            android:id="@+id/frameStackgroupfortyfour"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_240sdp"
            android:layout_gravity="bottom|center"
      >

            <ImageView
                android:id="@+id/imageGroupFortyFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_group44" />

            <LinearLayout
                android:id="@+id/linearColumnscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="@dimen/_40sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtScore"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        style="@style/grouptextblue"
                        android:text="SCORE" />
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/title_bg"/>

                        <TextView
                            android:id="@+id/score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:layout_gravity="center"
                            style="@style/grouptextblue1"
                            android:text="15 200"/>



                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearColumnreward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtReward"
                        style="@style/grouptextblue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="REWARD" />

                    <LinearLayout
                        android:id="@+id/linearRowcoinimg"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageCoinimg"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ruby" />

                        <TextView
                            android:id="@+id/txtLanguageOne"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:ellipsize="end"
                            android:singleLine="true"
                            style="@style/grouptextblue1"
                            android:text="25"
                            android:layout_width="wrap_content" />
                    </LinearLayout>
                    <TextView
                        style="@style/grouptextblue"
                        android:fontFamily="@font/vnfcomicsan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:textSize="@dimen/_15sdp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="ĐÁP ÁN:" />

                    <TextView
                        android:id="@+id/txtdapan"
                        style="@style/grouptextblue"
                        android:fontFamily="@font/vnfcomicsan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="CHANH CỐM" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/frameOkbtn"
                    android:layout_width="@dimen/_89sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_13sdp">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_folder" />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameHeader"
            android:layout_width="@dimen/_246sdp"
            android:layout_height="@dimen/_132sdp"
            android:layout_gravity="top|start"
            android:layout_marginBottom="@dimen/_10sdp">

            <ImageView
                android:id="@+id/imageVectorNine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_119sdp"
                android:layout_gravity="top|start"
                android:layout_marginBottom="@dimen/_10sdp"
                android:scaleType="fitXY"
                android:src="@drawable/img_vector9" />

            <FrameLayout
                android:id="@+id/frameStackribbon"
                android:layout_width="@dimen/_208sdp"
                android:layout_height="@dimen/_68sdp"
                android:layout_gravity="bottom|center"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_17sdp">

                <ImageView
                    android:id="@+id/imageRibbon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_68sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/imgribbon" />

                <TextView
                    android:id="@+id/txtLevelCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:fontFamily="@font/digitalt"
                    android:maxLines="1"
                    android:text="LEVEL 300"
                    android:textColor="#B20D78"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/txtComplete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/digitalt"
                    android:singleLine="true"
                    android:text="COMPLETE"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_24sdp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameStack"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_63sdp"
                android:layout_gravity="top|center"
                android:layout_marginStart="@dimen/_57sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_57sdp"
                android:layout_marginBottom="@dimen/_16sdp">

                <FrameLayout
                    android:id="@+id/frameStackunion"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_gravity="top|center"
                    android:layout_marginStart="@dimen/_34sdp"
                    android:layout_marginEnd="@dimen/_34sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/imageUnion"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_starbig" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameStackunionOne"
                    android:layout_width="@dimen/_46sdp"
                    android:layout_height="@dimen/_46sdp"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/imageUnionOne"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_star1_1" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameStackunionTwo"
                    android:layout_width="@dimen/_46sdp"
                    android:layout_height="@dimen/_46sdp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/imageUnionTwo"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_star1_1" />

                </FrameLayout>
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
